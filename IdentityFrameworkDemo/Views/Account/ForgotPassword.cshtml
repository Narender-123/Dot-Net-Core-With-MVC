@model IdentityFrameworkDemo.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>ForgotPassword</h1>

<h4>ForgotPasswordModel</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        @if (Model?.EmailSent == true)
        {
            <div class="alert alert-success">
                <h1>Forgot Password Email Sent Successfuly</h1>
                <p>If you are registered with us then <br/> Email is sent your registered EmailID</p>
            </div>
        }
        else
        {
            <p>Have you Forgot Password? Don't Worry You can reset ti easily</p>
            <form asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @*<div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EmailSent" /> @Html.DisplayNameFor(model => model.EmailSent)
                    </label>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Continue" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

<div>
    <a asp-action="Login" asp-controller="Account">Login</a>
</div>

